<%- include("partials/header.ejs"); %>
    <%- include("partials/homeNavbar.ejs"); %>

        <body>
            <div class="container p-2">
                <div class="jumbotron bg-light p-3">
                    <h1 class="display-4">Olá! Seja Bem-vindo!</h1>
                    <p class="lead">Este é um simples blog.</p>
                    <hr class="my-4">
                </div>
                <% articles.forEach(article=> { %>
                    <div class="card bg-light">
                        <div class="card-header dark-bg p-2">
                            <h2 class="p-2 mt-2 text-white">
                                <%= article.title %>
                            </h2>
                        </div>
                        <div class="card-body">
                            <%- article.body.substring(0,10) %>...
                        </div>
                        <div class="card-footer">
                            <a href="/<%= article.slug %>" class="btn btn-primary">Ler artigo</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <div class="row">
                <div class="col col-12">
                    <div class="page-control bg-light d-flex">
                        <a href="/articles/page/2"><i class="fas fa-chevron-right fa-2x"></i></a>
                    </div>
                </div>
            </div>
            </div>
        </body>
        <%- include("partials/footer.ejs"); %>