<%- include("../../partials/header"); %>
    <%- include("../../partials/homeNavbar.ejs"); %>

        <body>
            <div class="container p-2 m-2 ">
                <% result.articles.rows.forEach(article=> { %>
                    <div class="card bg-light m-4">
                        <div class="card-header dark-bg ">
                            <h2 class="p-2 mt-2 text-white">
                                <%= article.title %>
                            </h2>
                        </div>
                        <div class="card-body">
                            <p>
                                <%- article.body.substring(0,10) %>...
                            </p>
                        </div>
                        <div class="card-footer">
                            <button href="/<%= article.slug %>" class="btn btn-primary w-100">
                                Ler mais
                            </button>
                        </div>
                    </div>

                    <% }) %>

                        <div class="row">
                            <div class="col col-12">
                                <div class="page-control bg-light">
                                    <% if(result.page> 2) { %>
                                        <a href="/articles/page/<%= result.page - 1 %>"><i
                                                class="fas fa-chevron-left fa-2x"></i></a>
                                        <% } else if(result.page==2) { %>
                                            <a href="/"><i class="fas fa-chevron-left fa-2x"></i></a>
                                            <%} if(result.next) { %>
                                                <a href="/articles/page/<%= result.page + 1 %>"><i
                                                        class="fas fa-chevron-right fa-2x"></i></a>
                                                <%}%>
                                </div>
                            </div>
                        </div>
            </div>
        </body>
        <%- include("../../partials/footer.ejs"); %>