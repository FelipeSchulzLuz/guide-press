<%- include("../../partials/header"); %>
    <%- include("../../partials/homeNavbar.ejs"); %>

        <body>
            <div class="container p-2">
                
                <hr>
                <% result.articles.rows.forEach(article => { %>
                    <div class="card bg-light m-2 m-2">
                        <div class="card-header text-white dark-bg">
                            <h2>
                                <%= article.title %>
                            </h2>
                        </div>
                        <div class="card-body">
                            <%= article.body.substring(0,10) %>...
                        </div>
                        <div class="card-footer">
                            <a href="/<%= article.slug %>" class="btn btn-primary">Ler artigo</a>
                        </div>
                    </div>
                    <% }) %>
                    
                        <div class="row">
                            <div class="col col-12">
                                <div class="page-control bg-light d-flex">
                                    <%if(result.page > 2) { %>
                                        <a href="/articles/page/<%= result.page - 1 %>"><i
                                            class="fas fa-chevron-left"></i> Anterior</a>
                                    <% } else if(result.page==2) { %>
                                        <a href="/"><i
                                            class="fas fa-chevron-left"></i> Anterior</a>
                                    <%} if(result.next) { %>
                                        <a href="/articles/page/<%= result.page + 1 %>">Pr√≥xima <i
                                                        class="fas fa-chevron-right"></i></a>
                                        <%}%>
                                </div>
                            </div>
                        </div>

            </div>
        </body>
        <%- include("../../partials/footer.ejs"); %>